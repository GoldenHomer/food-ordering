        .container
            .row.clearfix
                .column.col-md-4.col-sm-3
                .column.col-md-4.col-sm-6
                    h2 Users
                    #users
                        .dropdown#addUser
                            a.dropdown-toggle#button(href='#', data-toggle='dropdown')
                                | Add User
                                strong.class(caret='caret')
                            .dropdown-menu(style='padding: 15px; padding-bottom: 0px;')
                                form#formAddUser(action='/adduser', method='post', accept-charset='UTF-8')
                                    | User Name
                                    input#inputUserName(style='margin-bottom: 15px;', type='text', name='username', size='30')
                                    | Email
                                    input#inputUserEmail(style='margin-bottom: 15px;', type='email', name='useremail', size='30')
                                    | Password
                                    input#inputUserPassword(style='margin-bottom: 15px;', type='password', name='userpassword', size='30')
                                    input#userAdmin(style='float: left; margin-right: 10px;', type='checkbox', name='useradmin', value='1')
                                    label.string.optional(for='userAdmin')  Admin?
                                    input#submitAddUser(style='clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 10px;', type='submit', name='commit', value='Add User')
                        .dropdown#deleteUser
                            a.dropdown-toggle#button(href='#', data-toggle='dropdown')
                                | Delete User
                                strong.class(caret='caret')
                            .dropdown-menu(style='padding: 15px; padding-bottom: 10px;')
                                form#formAddUser(action='/removeuser', method='post', accept-charset='UTF-8')
                                    | User Name
                                    input#inputUserName(style='margin-bottom: 15px;', type='text', name='username', size='30')
                                    input#submitDeleteUser(style='clear: left; width: 100%; height: 32px; font-size: 13px;', type='submit', name='commit', value='Delete User')
                        table.table
                            thead
                                tr
                                    th Name
                                    th Admin?
                            tbody
                                each user, i in userlist
                                    tr
                                        td#userlist= user.username
                                        if(user.admin != null)
                                            td Yes
                                        else
                                            td -

